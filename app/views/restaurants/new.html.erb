<div class="container">
  <div class="row">
    <div class="col col-sm-8 col-sm-offset-2">
      <h3>Add A Restaurant</h3>
      <%= simple_form_for (@restaurant) do |f| %>
        <%= f.input :name %>
        <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"]%>
        <%= f.input :address %>
        <%= f.input :reviews, collection: ["0", "1", "2", "3", "4", "5"], as: :radio_buttons%>
        <%= f.submit "Add a Restaurant" %>
      <% end %>
    </div>
  </div>
<%= link_to "Back to list", restaurants_path(@restaurants), class: "btn btn-primary"  %>
</div>
