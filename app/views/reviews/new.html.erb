<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: ["0", "1", "2", "3", "4", "5"], as: :radio_buttons%>
  <%= f.submit "add a review", class: "btn btn-primary" %>
<% end %>
<%= link_to "Back to list", restaurants_path, class: "btn btn-primary" %>
